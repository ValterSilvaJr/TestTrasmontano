<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_detalhes"
        android:layout_width="350dp"
        android:layout_height="190dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="7dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_sede"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                tools:text="Sede (São Paulo)" />

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sede"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                tools:text="Rua Tabatinguera" />

            <TextView
                android:id="@+id/tv_num_pred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sede"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tv_end"
                tools:text=", 294" />

            <TextView
                android:id="@+id/tv_bairro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sede"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tv_num_pred"
                tools:text=" - Centro" />

            <TextView
                android:id="@+id/tv_atendimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Segunda a Sexta" />

            <TextView
                android:id="@+id/tv_hora_inicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_atendimento"
                android:layout_marginStart="10dp"
                tools:text="07:00 às " />

            <TextView
                android:id="@+id/tv_hora_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_atendimento"
                android:layout_toEndOf="@id/tv_hora_inicial"
                tools:text="17:00" />

            <ImageView
                android:id="@+id/btn_location"
                android:layout_width="15dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv_hora_final"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:src="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_como_chegar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hora_final"
                android:layout_marginStart="5dp"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@+id/btn_location"
                android:text="Como Chegar" />

            <ImageView
                android:id="@+id/img_sede"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="60dp"
                android:layout_toEndOf="@+id/tv_como_chegar"
                android:src="@color/colorPrimary" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>